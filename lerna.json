{
  "npmClient": "yarn",
  "packages": [
    "packages/*",
    "plugins/*"
  ],
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "version": {
      "message": "chore(release): publish"
    }
  },
  "ignoreChanges": [
    "**/*.md",
    "**/*.spec.tsx?",
    "**/*.spec.jsx?",
    "**/__mocks__/**"
  ],
  "command": {
    "publish": {
      "conventionalCommits": true
    },
    "version": {
      "message": "chore: publish %s [ci-skip]",
      "exact": true
    }
  }
}
