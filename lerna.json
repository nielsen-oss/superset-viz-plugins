{
  "npmClient": "yarn",
  "packages": [
    "plugins/*"
  ],
  "useWorkspaces": true,
  "version": "independent",
  "ignoreChanges": [
    "**/*.md",
    "**/*.spec.tsx?",
    "**/*.spec.jsx?",
    "**/__mocks__/**"
  ],
  "command": {
    "publish": {
      "conventionalCommits": true
    },
    "version": {
      "message": "chore(release): publish",
      "exact": true
    }
  }
}
