{
  "name": "superset-maf-ui",
  "description": "Superset MAF UI",
  "private": true,
  "scripts": {
    "build": "lerna run dist",
    "sb": "yarn storybook",
    "clean": "rm -rf ./{packages,plugins}/**/{lib,esm,tsconfig.tsbuildinfo} build/",
    "format": "lerna exec prettier --write",
    "lint": "lerna exec eslint",
    "lint:fix": "lerna exec eslint --fix",
    "prettier": "lerna exec prettier",
    "test": "lerna exec jest --coverage --verbose",
    "test:watch": "yarn lint:fix && yarn jest --watch",
    "prepare-release": "git checkout master && git pull --rebase origin master && yarn install && yarn test",
    "prerelease": "yarn build",
    "pretest": "yarn lint",
    "release": "yarn prepare-release && lerna publish && yarn postrelease",
    "commit": "npx git-cz"
  },
  "repository": "https://gitlab.com/nielsen-media/maf/superset/superset-maf-ui",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.15.0",
    "@typescript-eslint/parser": "^2.15.0",
    "babel-eslint": "10.0.3",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-config-react-app": "^5.1.0",
    "eslint-plugin-flowtype": "^4.5.3",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^2.3.0",
    "@commitlint/config-conventional": "^9.1.2",
    "@commitlint/config-lerna-scopes": "^9.1.2",
    "husky": "^4.2.5",
    "lerna": "^3.15.0",
    "lint-staged": "^10.0.3",
    "prettier": "^1.19.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "@babel/core": "7.7.4",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.4.0",
    "@testing-library/user-event": "^8.0.3",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/jest": "^24.0.25",
    "babel-jest": "^24.9.0",
    "babel-loader": "8.0.6",
    "babel-plugin-named-asset-import": "^0.3.5",
    "babel-preset-react-app": "^9.1.0",
    "eslint-loader": "3.0.2",
    "jest": "24.9.0",
    "jest-environment-jsdom-fourteen": "0.1.0",
    "jest-resolve": "24.9.0",
    "typescript": "~3.7.4"
  },
  "engines": {
    "node": ">=10.10.0",
    "npm": ">=6.8.0",
    "yarn": ">=1.13.0"
  },
  "workspaces": [
    "./packages/*",
    "./plugins/*"
  ],
  "browserslist": [
    "last 3 chrome versions",
    "last 3 firefox versions",
    "last 3 safari versions",
    "last 3 edge versions"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "./{packages,plugins}/*/{src,test,storybook}/**/*.{js,jsx,ts,tsx,json,md}": [
      "yarn prettier"
    ],
    "./{packages,plugins}/*.md": [
      "yarn prettier"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {}
}
